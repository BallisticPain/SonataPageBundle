<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="sonata.page.cache.esi" class="Sonata\PageBundle\Cache\BlockEsiCache">
            <tag name="sonata.cache" />

            <argument type="collection" />
            <argument type="service" id="router" />
            <argument type="service" id="sonata.block.manager" />
            <argument type="collection" />
        </service>

        <service id="sonata.page.cache.js_sync" class="Sonata\PageBundle\Cache\JsCache" >
            <tag name="sonata.page.cache" />
            <argument type="service" id="router" />
            <argument>true</argument>
            <argument type="service" id="service_container" />
        </service>

        <service id="sonata.page.cache.js_async" class="Sonata\PageBundle\Cache\JsCache" >
            <tag name="sonata.page.cache" />
            <argument type="service" id="router" />
            <argument>false</argument>
            <argument type="service" id="service_container" />
        </service>
    </services>
</container>